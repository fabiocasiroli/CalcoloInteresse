<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.crt.app"
    versionCode = "10"
    version     = "1.0" >

<!-- versionCode is optional and Android only -->

  <name>App Calcolo Interesse</name>

  <description>
      App per calcolare l'interesse semplice
  </description>

  <author email="casiroli.fabio@canossamilano.org">
      Fabio Casiroli
  </author>
  <!-- icone per android e ios -->
<icon src="formulainteresse.png" platform="android" qualifier="ldpi"/>
<icon src="formulainteresse.png" platform="android" qualifier="mdpi"/>
<icon src="formulainteresse.png" platform="android" qualifier="hdpi"/>

<icon src="formulainteresse.png" platform="ios" qualifier="ldpi"/>
<icon src="formulainteresse.png" platform="ios" qualifier="mdpi"/>
<icon src="formulainteresse.png" platform="ios" qualifier="hdpi"/>
<!-- abilita l'accesso al web -->
<access origin="*"/>
<!-- accesso a skeleton per il css -->
<plugin name="cordova-plugin-whitelist" source="npm"/>
<allow-navigation href="*://*getskeleton.com/*"/>
</widget>
